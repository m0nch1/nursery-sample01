extends ./layouts/_home.pug

block vars
  include _config.pug
  - var key = "home"
  - var page = pages[key]

block contents
  .container

    .hero
      .hero__img
      .hero__caption
        .hero__cap--one すくすく
        .hero__cap--two のびのび
        .hero__cap--three もちもち
      a(href="#").hero__scroll Scroll
      .hero__sns
        .hero__icon--twitter
          img(src="../images/icon/twitter.svg" alt="twitter icon")
        .hero__icon--instagram
          img(src="../images/icon/instagram.svg" alt="instagram icon")
        .hero__icon--facebook
          img(src="../images/icon/facebook.svg" alt="facebook icon")

    .message
      h2.message__title
        |そらいろはれて
        br
        |おきつへに
        br
        |ほふねむれゐぬ
        br
        |もやのうち
      p.message__subtitle MOCHIMOCHI CONCEPT

